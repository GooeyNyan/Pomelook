{
  "name": "pomelook",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start":
      "tsc --watch & node node_modules/react-native/local-cli/cli.js start",
    "android": "node_modules/.bin/react-native run-android",
    "ios": "node_modules/.bin/react-native run-ios",
    "test": "./node_modules/.bin/jest",
    "test:watch": "yarn test --watchAll",
    "test:coverage": "yarn test --coverage",
    "lint":
      "./node_modules/.bin/tslint -p .",
    "prettier": "yarn lint --fix",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.tsx": [
      "./node_modules/.bin/tslint",
      "./node_modules/.bin/jest --findRelatedTests --collectCoverage='false'",
      "git add"
    ],
    "*.ts": [
      "./node_modules/.bin/tslint",
      "./node_modules/.bin/jest --findRelatedTests --collectCoverage='false'",
      "git add"
    ]
  },
  "dependencies": {
    "react": "16.3.2",
    "react-native": "0.55.2",
    "react-thunk": "^1.0.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.9",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^22.2.3",
    "@types/react": "^16.3.11",
    "@types/react-native": "^0.55.2",
    "@types/react-test-renderer": "^16.0.1",
    "@types/redux-mock-store": "^0.0.13",
    "@types/redux-thunk": "^2.1.0",
    "babel-core": "^6.26.0",
    "babel-jest": "22.4.3",
    "babel-preset-react-native": "4.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "husky": "^0.14.3",
    "jest": "22.4.3",
    "lint-staged": "^7.0.4",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.3.2",
    "react-test-renderer": "16.3.1",
    "redux-mock-store": "^1.5.1",
    "ts-jest": "^22.4.3",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.1"
  },
  "jest": {
    "preset": "react-native",
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.ts",
    "collectCoverage": true,
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "moduleNameMapper": {
      "^image![a-zA-Z0-9$_-]+$": "GlobalImageStub",
      "^[@./a-zA-Z0-9$_-]+\\.(png|gif)$": "RelativeImageStub"
    },
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/",
      "<rootDir>/lib/"
    ],
    "cacheDirectory": ".jest/cache"
  }
}
